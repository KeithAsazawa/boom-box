<%= simple_form_for(@song, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :mp3_file_size %><br />
  <%= f.full_error :mp3_content_type %>

  <div class="form-inputs">
    <%= f.input :artist, label: "Artist" %>
    <%= f.input :title, label: "Title" %>
    <%= f.input :description %>
    <%= f.input :genre %>
    <%= f.input :mp3, label: "Upload a song" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
