<%= simple_form_for(@song, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :artist %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :genre %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
